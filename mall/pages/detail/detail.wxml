<!--pages/detail/detail.wxml-->
<swiper>
  <swiper-item wx:for="{{info.slides}}" wx:key="index">
    <image src="http://localhost:3000{{item}}" mode="aspectFill" bindtap="handleTap" data-currnt="http://localhost:3000{{item}}"></image>
  </swiper-item>
</swiper>

<mp-sticky offset-top="0">
  <view class="detailtabbar" style="width:100vw">
    <view class="{{current === 0 ? 'active' : ''}}" bindtap="handleActive" data-index="{{0}}">商品详情</view>
    <view class="{{current === 1 ? 'active' : ''}}" bindtap="handleActive" data-index="{{1}}">用户评价</view>
  </view>
</mp-sticky>

<view wx:if="{{current === 0}}">
  <image wx:for="{{info.desc}}" wx:key="index" src="{{item}}" mode="aspectFill" style="width:100%;height:1300rpx;"></image>
</view>

<view wx:else>
  <view wx:for="{{info.desc}}" wx:key="index">
    <image></image>
    <text></text>
  </view>
</view>