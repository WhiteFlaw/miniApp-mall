<!--pages/detail/detail.wxml-->
<swiper>
  <swiper-item wx:for="{{info.slides}}" wx:key="index">
    <image src="http://localhost:3000{{item}}" mode="aspectFill" bindtap="handleTap" data-currnt="http://localhost:3000{{item}}"></image>
  </swiper-item>
</swiper>

<mp-sticky offset-top="0">
  <view class="detailtabbar" style="width:100vw">
    <view class="{{current === 0 ? 'active' : ''}}" bindtap="handleActive" data-index="{{0}}">商品详情</view>
    <view class="{{current === 1 ? 'active' : ''}}" bindtap="handleActive" data-index="{{1}}">用户评价({{info.goodcomment}})</view>
  </view>
</mp-sticky>

<view wx:if="{{current === 0}}">
  <view>{{info.title}}</view>
  <view>{{info.feature}}</view>
  <image wx:for="{{info.desc}}" wx:key="index" src="{{item}}" mode="aspectFill" style="width:100%;height:1300rpx;"></image>
</view>

<view wx:else>
  <view wx:for="{{info.comments}}" wx:key="index" style="display:flex;margin-bottom:10rpx;">
    <image class="avatar" src="http://localhost:3000/{{item.userImageUrl}}" style="height:100rpx;width:100rpx;border-radius:50%;"></image>
    <view>
      <view>{{item.nickname}}</view>
      <view>{{item.creationTime}}</view>
      <view>{{item.content}}</view>
    </view>
  </view>
</view>