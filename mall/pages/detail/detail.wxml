<!--pages/detail/detail.wxml-->
<swiper autoplay="true">
  <!-- 轮播图 -->
  <swiper-item wx:for="{{goods.slides}}" wx:key="index">
    <image src="http://localhost:3000{{item}}" mode="aspectFill" bindtap="handleTap" data-current="http://localhost:3000{{item}}"></image>
  </swiper-item>
</swiper>

<mp-sticky offset-top="0">
  <!-- 导航粘黏 -->
  <view class="detailtabbar" style="width:100vw">
    <view class="{{current === 0 ? 'active' : ''}}" bindtap="handleActive" data-index="{{0}}">商品详情</view>
    <view class="{{current === 1 ? 'active' : ''}}" bindtap="handleActive" data-index="{{1}}">用户评价({{goods.comments.length}})</view>
  </view>
</mp-sticky>

<view wx:if="{{current === 0}}">
  <!-- 商品详情内容 -->
  <view>{{goods.title}}</view>
  <view>{{goods.feature}}</view>
  <image wx:for="{{goods.desc}}" wx:key="index" src="{{item}}" mode="aspectFill" style="width:100%;height:1300rpx;"></image>
</view>

<view wx:else>
  <!-- 用户评价内容 -->
  <view wx:for="{{goods.comments}}" wx:key="index" style="display:flex;flex-direction:column;margin-bottom:10rpx;">
    <view style="display: flex;justify-content:space-between;align-items:center;padding:20rpx;">
      <image class="avatar" src="http://localhost:3000/{{item.userImageUrl}}" style="height:100rpx;width:100rpx;border-radius:50%;"></image>
      <view style="margin-left: -60rpx;">{{item.nickname}}</view>
      <view>{{item.creationTime}}</view>
    </view>
    <view style="margin-left:20rpx;">{{item.content}}</view>
    <block wx:if="{{item.imgUrl !== []}}">
      <view style="display:flex;">
        <image wx:for="{{item.imgUrl}}" wx:for-index="ind" wx:for-item="ite" wx:key="ind" src="http://localhost:3000/{{ite}}" bindtap="commentTap" data-current='{{["http://localhost:3000/{{ite}}", item.id]}}' mode="widthFix"></image>
      </view>
    </block>
    <block wx:else>
      <view style="margin-left:20rpx;">
        (该用户未附加图片)
      </view>
    </block>
  </view>

</view>